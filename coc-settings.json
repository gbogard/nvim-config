{
  "suggest.noselect": false,
  "languageserver": {
    "metals": {
      "command": "~/.config/nvim/metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "ocaml": {
       "command": "ocaml-language-server",
       "args": ["--stdio"],
       "filetypes": ["ocaml", "reason"]
     }
  }
}
